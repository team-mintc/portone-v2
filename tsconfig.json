{
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./lib/"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
